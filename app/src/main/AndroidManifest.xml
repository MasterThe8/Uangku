<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pember.latihan.uangku">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="Uangku"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Uangku">

        <!-- Splash as launcher -->
        <activity android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Welcome Activity (berisi tombol login & register) -->
        <activity android:name=".MainActivity" />

        <!-- Login & Register -->
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.EditProfileActivity" />
        <activity android:name=".ui.IncomeActivity" />

    </application>

</manifest>
